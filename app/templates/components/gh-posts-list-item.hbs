<h3 class="gh-content-entry-title">{{#link-to "editor.edit" post.id class="permalink" title="Edit this post"}}{{post.title}}{{/link-to}}</h3>
<p>{{subText}}</p>

<section class="gh-content-entry-meta">
    {{#if isPage}}
        <span class="gh-content-status-draft gh-badge gh-badge-black">页面</span>
    {{/if}}

    {{#if isScheduled}}
        <span class="gh-content-status-draft gh-badge">已计划</span>
    {{/if}}

    {{#if isDraft}}
        <span class="gh-content-status-draft gh-badge gh-badge-red">草稿</span>
    {{/if}}

    {{#if isFeatured}}
        <span class="gh-content-status-featured gh-badge gh-badge-blue">精选</span>
    {{/if}}

    {{#if (and isPublished (not post.page))}}
        <span class="gh-content-status-published">已发布</span>
    {{/if}}

    由<span class="gh-content-entry-author">{{authorNames}}</span>编辑 &mdash;

    {{#if isPublished}}
        {{gh-format-post-time post.publishedAtUTC published=true}}
    {{else if isScheduled}}
        <span class="green">将{{gh-format-post-time post.publishedAtUTC scheduled=true}} 上线</span>
    {{else}}
        最后编辑 {{gh-format-post-time post.updatedAtUTC draft=true}}
    {{/if}}
</section>
